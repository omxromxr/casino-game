      alert("You don't have enough money to buy this item.");
      return;
    }

    balance -= cost;
    inventory.push(itemName);
    updateBalance();
    updateInventory();
  }

  function sellItem() {
    if (inventory.length === 0) {
      alert("You have nothing to sell!");
      return;
