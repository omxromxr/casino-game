  function buyItem() {
    const selected = document.getElementById('shopItem').value;
    let itemName = "";
    let cost = 0;

    if (selected === "1") {
      itemName = "Lucky Charm";
      cost = 50;
    } else if (selected === "2") {
      itemName = "Super Clover";
      cost = 100;
    } else if (selected === "3") {
      itemName = "Jackpot Gem";
      cost = 200;
    }

